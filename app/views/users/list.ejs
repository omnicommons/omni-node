<% include ../partials/header.ejs %>

<div class="dark viewport-container">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <h1 class="text-center mt-3 mb-2">
                	User List
                </h1>
                
                <div class="row">
                    <% users.forEach(function(thisUser){ %>
                            <div class="col-12 col-md-4 col-lg-3 text-center">
                                <h4 class="mt-3">
                                    <i class="fa fa-user"></i>&nbsp;
                                    <a 
                                        href="/users/<%= thisUser.local.username %>" 
                                        style="color: white; text-decoration: none;"
                                    >
                                        <%= thisUser.local.username %>
                                    </a>    
                                </h4>
                                <p>joined <%= thisUser.createdFromNow() %></p>
                            </div>
                    <% }); %>
                </div>

            </div>    
        </div>        
    </div>

</div>

<% include ../partials/footer.ejs %>